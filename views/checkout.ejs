                                    var i = 0 ; 
                                    getcart.forEach(e=>{  %>
                                   <ul>
                                    <li><%= e.item.tensp%> <span><%=(e.item.gia-(e.item.gia*e.item.phantram/100))*arr_qty[i]%></span></li>
                                   </ul>
                                    
                                   
                                   <%i++;
                                   
                                   
                                 })
                            %>
                                   <%}
                     %>
                     
                     <%
                     if(session.totalQty!=0){
                     var i = 0 ; 
                     var subtotal = 0 ;
                     
                      getcart.forEach(e=>{ 
                          subtotal+=(e.item.gia-(e.item.gia*e.item.phantram/100))*arr_qty[i];
                          i++; 

                      });%>
                      
                     <div class="checkout__order__subtotal">Subtotal <span><%=subtotal %></span></br>
                                                    <span style="color: red;font-size: 12px;"> - <%=phantram %>%</span></div>
                                
                                <div class="checkout__order__total">Total <span><%=subtotal*(100-phantram)/100 %></span></div>
                            
                     <%}%>
